@{
    ViewData["Title"] = "Notas | Editar";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Notas | Editar</h1>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="card shadow-lg p-3 mb-5 bg-body rounded">
            <div class="card-header">
                <h5 style="float:left">Materia: </h5>
                <spam style="float:right">Total: </spam>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Alumno</th>
                            <th>1°</th>
                            <th>2°</th>
                            <th>3°</th>
                            <th>4°</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.Notas)
                        {
                            <tr>
                                <td></td
                                <td></td>
                                <td>@item.nota1</td>
                                <td>@item.nota2</td>
                                <td>@item.nota3</td>
                                <td>@item.nota4</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        
    </div>
</div>
@section scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
    <script src="~/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
}
