@{
    ViewData["Title"] = "Aula | Crear";
}
@model AcademiaSoft.Models.Aula

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Aula | Crear</h1>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-5 col-sm-12">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h4 class="card-title"><i class="fas fa-edit"></i> Registrar Aula</h4>
                    </div>
                    <form asp-action="Create" asp-controller="Aula" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="Descripcion" class="control-label"></label>
                                <input asp-for="Id" type="hidden" value="0" />
                                <textarea asp-for="Descripcion" id="Descripcion"></textarea>
                                <span asp-validation-for="Descripcion" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="form-group">
                                <a class="btn btn-default" href="@Url.Action("Index","Aula")">Regresar</a>
                                <button class="btn btn-success" type="submit">Guardar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}

@section scripts{
    <script src="~/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>

    <!-- summernote -->
    <link rel="stylesheet" href="~/plugins/summernote/summernote-bs4.min.css">
    <!-- Summernote -->
    <script src="~/plugins/summernote/summernote-bs4.min.js"></script>

    <script>
        $(function () {
            $('#Descripcion').summernote()
        })
    </script>
}